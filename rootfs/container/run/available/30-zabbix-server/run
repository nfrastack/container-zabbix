source /container/base/functions/container/init
source /container/defaults/zabbix
source /container/defaults/zabbix-server
SERVICE_NAME="zabbix-server"

check_container_initialized
liftoff

print_start "Starting Zabbix Server $(zabbix_server -V | head -n 1 | awk '{print $NF}')"
silent exec s6-setuidgid ${ZABBIX_USER} zabbix_server -c "${ZABBIX_SERVER_CONFIG_PATH%/}"/"${ZABBIX_SERVER_CONFIG_FILE}" -f;
